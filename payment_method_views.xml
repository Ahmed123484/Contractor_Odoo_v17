<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View for Payment Method Config -->
        <record id="view_payment_method_config_tree" model="ir.ui.view">
            <field name="name">payment.method.config.tree</field>
            <field name="model">payment.method.config</field>
            <field name="arch" type="xml">
                <tree string="Payment Methods">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="payment_type"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View for Payment Method Config -->
        <record id="view_payment_method_config_form" model="ir.ui.view">
            <field name="name">payment.method.config.form</field>
            <field name="model">payment.method.config</field>
            <field name="arch" type="xml">
                <form string="Payment Method">
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="name"/>
                                <field name="journal_id"/>
                            </group>
                            <group>
                                <field name="payment_type"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Action for Payment Method Config -->
        <record id="action_payment_method_config" model="ir.actions.act_window">
            <field name="name">Payment Methods</field>
            <field name="res_model">payment.method.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to create a new payment method.
                </p>
            </field>
        </record>
        
        <!-- Menu for Payment Method Config -->
        <menuitem id="menu_payment_method_config" 
                  name="Payment Methods" 
                  parent="contractor_statement_config_menu" 
                  action="action_payment_method_config" 
                  sequence="70"/>
    </data>
</odoo>